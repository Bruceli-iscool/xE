{
  "name": "Java 21 + Gradle",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "vscjava.vscode-java-pack",
    "redhat.java",
    "vscjava.vscode-gradle",
    "gitpod.gitpod-theme"
  ],
  "postCreateCommand": "gradle --version && java -version && git --version",
  "remoteUser": "vscode"
}
